  "main": "hardhat.config.js",
  "scripts": {
    "test": "hardhat test",
    "compile": "hardhat compile",
    "deploy": "node scripts/deployAndVerify.js",
    "deploy:dao": "SEFERVERSE_CONTRACT_NAME=SeferVerseDAO node scripts/deployAndVerify.js",
    "deploy:sv": "SEFERVERSE_CONTRACT_NAME=SeferVerse node scripts/deployAndVerify.js",
    "deploy:my": "SEFERVERSE_CONTRACT_NAME=MyContract node scripts/deployAndVerify.js",
    "deploy:all": "hardhat run scripts/deploy_all.js --network localhost",
    "deploy:gov": "hardhat run scripts/deploy_governance.js --network localhost",
    "abi:export": "mkdir -p abis && cp artifacts/contracts/SeferVerseDAO.sol/SeferVerseDAO.json abis/ && cp artifacts/contracts/governance/SeferGovernor.sol/SeferGovernor.json abis/ && cp artifacts/contracts/governance/SeferTimelock.sol/SeferTimelock.json abis/ && cp artifacts/contracts/refund/RefundManager.sol/RefundManager.json abis/ && cp artifacts/contracts/refund/RefundVaultEIP712.sol/RefundVaultEIP712.json abis/ || true",
    "verify": "hardhat verify"
  },
  "keywords": [],
